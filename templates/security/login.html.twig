{% extends 'base.html.twig' %}
        {% block stylesheets %}
            <link rel="stylesheet" href="style/loginPage.css">
            <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Overpass+Mono" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div id="wrapper">
            <div class="main-content">
                <div class="header">
                    <img src="https://logos-download.com/wp-content/uploads/2016/03/Instagram_Logo_2016.png" />
                </div>
                <div class="l-part">
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="input-1" autocomplete="username" required autofocus>
                    <div class="overlap-text">
                        <input type="password" name="password" id="inputPassword" class="input-2" autocomplete="current-password" required>
                    </div>

                    <button type="submit" class="btn">Log in</button>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="sub-content">
                <div class="s-part">
                    Don't have an account?<a href="{{ path('app_register') }}">Sign up</a>
                </div>
            </div>
        </div>


        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}


    </form>
{% endblock %}

